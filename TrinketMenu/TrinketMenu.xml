			<Button name="TrinketMenu_MainResizeButton" inherits="TrinketMenuResizeTemplate">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="1" y="-1"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
		</Frames>

		<Scripts>
			<OnLoad>
				TrinketMenu.OnLoad()
			</OnLoad>
			<OnEvent>
				TrinketMenu.OnEvent()
			</OnEvent>
			<OnMouseDown>
				TrinketMenu.MainFrame_OnMouseDown(arg1)
			</OnMouseDown>
			<OnMouseUp>
				TrinketMenu.MainFrame_OnMouseUp(arg1)
			</OnMouseUp>
			<OnHide>
				TrinketMenu_MenuFrame:Hide()
			</OnHide>
			<OnShow>
				TrinketMenu.OnShow()
			</OnShow>
			<OnHide>
				TrinketMenu.OnHide()
			</OnHide>
		</Scripts>
	</Frame>

