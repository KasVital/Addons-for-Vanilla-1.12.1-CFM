<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<!-- Resize grip template -->
	<Button name="TrinketMenuResizeTemplate" virtual="true">
		<Size>
			<AbsDimension x="16" y="16"/>
		</Size>
		<NormalTexture file="Interface\AddOns\TrinketMenu\Buttons">
			<TexCoords left=".75" right=".875" top="0" bottom=".125"/>
		</NormalTexture>
		<HighlightTexture file="Interface\AddOns\TrinketMenu\Buttons" alphaMode="ADD">
			<TexCoords left=".75" right=".875" top="0" bottom=".125"/>
		</HighlightTexture>
		<Scripts>
			<OnLoad>
				this:SetFrameLevel(this:GetFrameLevel()+2)
			</OnLoad>
			<OnMouseDown>
				TrinketMenu.StartScaling()
			</OnMouseDown>
			<OnMouseUp>
				TrinketMenu.StopScaling()
			</OnMouseUp>
		</Scripts>
	</Button>

	<!-- Worn trinkets template -->
	<CheckButton name="TrinketMenuMainTrinketTemplate" inherits="ActionButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				this:RegisterForClicks("LeftButtonUp","RightButtonUp")
			</OnLoad>
			<OnClick>
				TrinketMenu.MainTrinket_OnClick()
			</OnClick>
			<OnEnter>
				TrinketMenu.BuildMenu()
				TrinketMenu.WornTrinketTooltip()
			</OnEnter>
			<OnLeave>
				TrinketMenu.ClearTooltip()
			</OnLeave>
		</Scripts>
	</CheckButton>

	<!-- Menu trinkets template -->
	<CheckButton name="TrinketMenuMenuTrinketTemplate" inherits="ActionButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				this:RegisterForClicks("LeftButtonUp","RightButtonUp")
			</OnLoad>
			<OnClick>
				TrinketMenu.MenuTrinket_OnClick()
			</OnClick>
			<OnEnter>
				TrinketMenu.MenuTrinketTooltip()
			</OnEnter>
			<OnLeave>
				TrinketMenu.ClearTooltip()
			</OnLeave>
		</Scripts>
	</CheckButton>

	<!-- Cooldown time text template -->
	<Frame name="TrinketMenuTimeTemplate" enableMouse="false" virtual="true">
		<Size>
			<AbsDimension x="36" y="12"/>
		</Size>
		<Anchors>
			<Anchor point="BOTTOMRIGHT"/>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTime" inherits="NumberFontNormal" justifyH="CENTER"/>
			</Layer>
		</Layers>
	</Frame>

	<!-- Combat queue inset template -->
	<Frame name="TrinketMenuQueueTemplate" enableMouse="false" virtual="true">
		<Size>
			<AbsDimension x="18" y="18"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="-2" y="2"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentQueue"/>
			</Layer>
		</Layers>
	</Frame>

